{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": { "text": "Number of fatalities categorised by gender from Jan 2018 to July 2023" },
    
    "data":{
      "url": "https://raw.githubusercontent.com/trung1411/Data-visualisation-2/main/fatalities_per_year_gender.csv",
      "format": {"type": "csv"}
      
    },
    "params": [{
      "name": "gender",
      "select": {"type": "point", "fields": ["Gender"]},
      "bind": "legend"
      
    }],
    "width": 480,
    "height": 240,
    "mark": "line",
    "encoding": {
      "x": {
        "field": "Time",
        "timeUnit": "yearmonth",
        "axis": {"title": "", "grid": false}
      },
      "y": {"field": "Fatalities", "type": "quantitative"},
      "color":{
        "field": "Gender",
        "scale": {
          "range": ["#a6cee3", "#1f78b4", "#b2df8a"]
        }
      },
      "tooltip":[
        {"field": "Gender", "type": "nominal", "title": "Gender"},
        {"field": "Fatalities", "type": "quantitative", "title": "Number of fatalities"},
        {"field": "Time", "type": "temporal", "title": "Time period"}
      ],
      
      "opacity": {
        "condition": {"param": "gender", "value": 1},
        "value": 0.2
      }
      
    }

    
  }    
   